<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/outline">

    <TextView
        android:id="@+id/deviceNameTv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textStyle="bold"
        android:text="Bulb"
        android:layout_margin="10dp"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/activatorTv"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/deviceNameTv"
        android:gravity="center_vertical"
        android:text="Upon ____,"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/deviceNameTv" />

    <TextView
        android:id="@+id/actionTv"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_toRightOf="@id/activatorTv"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textStyle="bold"
        android:text=" do ____"
        app:layout_constraintTop_toTopOf="@+id/deviceNameTv"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/deviceNameTv"
        android:layout_toRightOf="@id/editBtn"
        android:text="Delete"/>

    <Button
        android:id="@+id/editBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/deviceNameTv"
        android:text="Edit"/>

</RelativeLayout>